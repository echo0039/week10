{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Suicide Rates in Asia (2012 - 2014)",
    "width": "container",
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "params": [{
            "name": "Year_selection",
            "value": 2012,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2014,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/asia.geo.topojson",
                "format": { "type": "topojson", "feature": "asia.geo" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/week10/suicide%20rates%201%20(choropleth%20map).csv"
            },
            "transform": [{
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/asia.geo.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "asia.geo"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                { "filter": "datum.Year == Year_selection" }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "Crude suicide rates (per 100k population)",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            35
                        ],
                        "scheme": "blues"
                    },
                    "legend": { "format": ".2s" }
                },
                "tooltip": [
                    { "field": "Year", "type": "quantitative", "title": "Year" },
                    { "field": "Country", "type": "nominal", "title": "Country" },
                    {
                        "field": "Crude suicide rates (per 100k population)",
                        "type": "quantitative",
                        "title": "Crude suicide rates (per 100k population)",
                        "format": ","
                    }
                ]
            }
        },
        
        {
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/week10/suicide%20rates%201%20(choropleth%20map).csv"
            },
            "transform": [{
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/asia.geo.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "asia.geo"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                { "filter": "datum.Year == Year_selection" }
            ],
            "mark": { "type": "text", "align": "left", "dx": 4 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "Crude suicide rates (per 100k population)",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            35
                        ],
                        "scheme": "blues"
                    },
                    "legend": { "format": ".2s" }
                },
                "tooltip": [
                    { "field": "Year", "type": "quantitative", "title": "Year" },
                    { "field": "Country", "type": "nominal", "title": "Country" },
                    {
                        "field": "Crude suicide rates (per 100k population)",
                        "type": "quantitative",
                        "title": "Crude suicide rates (per 100k population)",
                        "format": ","
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/week10/suicide%20rates%201%20(choropleth%20map).csv"
            },
            "mark": { 
                "type": "text", 
                "align": "right", 
                "baseline": "middle",
                "dx": -12,
                "fontSize": 10,
                "fontStyle": "italic"
            },
            "encoding": {
                "longitude": { "field": "Latitude", "type": "quantitative" },
                "latitude": { "field": "Longitude", "type": "quantitative"},
                "text": {"field": "Country", "type": "nominal"},
                "color": { "value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'Mongolia' || datum['Country'] == 'China' || datum['Country'] == 'Japan' || datum['Country'] == 'Korea' || datum['Country'] == 'India' || datum['Country'] == 'Kazakhstan'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }     
    ],
    "config": {}
}