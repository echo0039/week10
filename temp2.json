{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Suicide Rates in Asian Countries (2012 - 2014)",
    "width": "container",
    "height": 500,
    "projection": {
        "type": "equirectangular"
    },
    "params": [{
            "name": "Year_selection",
            "value": 2012,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2014,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/asia.geo.topojson",
                "format": { "type": "topojson", "feature": "asia.geo" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/suicide%20rates%20(choropleth%20map).csv"
            },
            "transform": [{
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/echo0039/3179-testrepo/main/asia.geo.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "asia.geo"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                { "filter": "datum.Year == Year_selection" }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "Crude suicide rates (per 100k population)",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            35
                        ],
                        "scheme": "blues"
                    },
                    "legend": { "format": ".2s" }
                },
                "tooltip": [
                    { "field": "Year", "type": "quantitative", "title": "Year" },
                    { "field": "Country", "type": "nominal", "title": "Country" },
                    {
                        "field": "Crude suicide rates (per 100k population)",
                        "type": "quantitative",
                        "title": "Crude suicide rates (per 100k population)",
                        "format": ","
                    }
                ]
            }
        }
    ],
    "config": {}
}
